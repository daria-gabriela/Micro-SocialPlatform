@model MicroSocialPlatform.Models.ApplicationUser
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<div class="container py-5">
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-transparent border-0 pt-4 px-4">
            <h2 class="h4 mb-0 d-flex align-items-center gap-2">
                <i class="bi bi-person-gear"></i>
                Edit Profile
            </h2>
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <!-- Personal Info Section -->
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                            <label asp-for="FirstName">
                                <i class="bi bi-person me-2"></i>First Name
                            </label>
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                            <label asp-for="LastName">
                                <i class="bi bi-person me-2"></i>Last Name
                            </label>
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Description -->
                <div class="form-floating mb-4">
                    <textarea asp-for="Description"
                              class="form-control"
                              style="height: 100px"
                              placeholder="Description"></textarea>
                    <label asp-for="Description">
                        <i class="bi bi-card-text me-2"></i>Description
                    </label>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <!-- Profile Picture -->
                <div class="mb-4">
                    <label class="form-label d-flex align-items-center gap-2">
                        <i class="bi bi-image"></i>
                        Profile Picture
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-upload"></i>
                        </span>
                        <input asp-for="ProfilePicture"
                               type="file"
                               class="form-control"
                               accept="image/*" />
                    </div>
                    <span asp-validation-for="ProfilePicture" class="text-danger small"></span>
                </div>

                <!-- Public Profile Toggle -->
                <div class="form-check form-switch mb-4">
                    <input asp-for="IsPublic"
                           class="form-check-input"
                           role="switch"
                           id="flexSwitchPublic" />
                    <label class="form-check-label" for="flexSwitchPublic">
                        <i class="bi bi-globe2 me-2"></i>Public Profile
                    </label>
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg d-flex align-items-center justify-content-center gap-2">
                        <i class="bi bi-check-circle"></i>
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    .btn-primary {
        background: linear-gradient(to right, #0d6efd, #0b5ed7);
        border: none;
        transition: all 0.2s;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(13,110,253,0.2);
        }

    .form-check-input:checked {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <partial name="_ValidationScriptsPartial" />
}