   @model IEnumerable<MicroSocialPlatform.Models.ApplicationUser>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container py-5">
    <!-- Search Header -->
    <div class="d-flex align-items-center gap-2 mb-4">
        <i class="bi bi-search fs-4 text-primary"></i>
        <h2 class="m-0">Search Results</h2>
    </div>

    @if (!Model.Any())
    {
        <!-- Empty State -->
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-5 text-center">
                <i class="bi bi-people text-muted display-1 mb-3"></i>
                <h3 class="h5 mb-2">No Users Found</h3>
                <p class="text-muted mb-0">Try different search terms or filters</p>
            </div>
        </div>
    }
    else
    {
        <!-- Results Grid -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var user in Model)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm rounded-4">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center gap-3">
                                <div class="avatar-circle">
                                    <i class="bi bi-person-circle fs-3"></i>
                                </div>
                                <div>
                                    <h3 class="h6 mb-2">@user.FirstName @user.LastName</h3>
                                    <a asp-controller="Users"
                                       asp-action="Profile"
                                       asp-route-id="@user.Id"
                                       class="btn btn-sm btn-primary d-flex align-items-center gap-2">
                                        <i class="bi bi-eye"></i>
                                        View Profile
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    .avatar-circle {
        width: 48px;
        height: 48px;
        background: #f8f9fa;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-primary {
        background: linear-gradient(to right, #0d6efd, #0b5ed7);
        border: none;
        transition: all 0.2s;
    }

    .btn:hover {
        transform: translateY(-2px);
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}