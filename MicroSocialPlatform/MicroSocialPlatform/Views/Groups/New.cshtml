@model MicroSocialPlatform.Models.Group

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h2 class="h4 text-center mb-0">
                        <i class="bi bi-people-fill me-2"></i>Create New Group
                    </h2>
                </div>

                <div class="card-body p-4">
                    <form enctype="multipart/form-data" method="post"
                          asp-action="New" asp-controller="Groups">

                        @if (ViewData.ModelState.ErrorCount > 0)
                        {
                            <div class="alert alert-danger alert-dismissible fade show mb-4">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <div asp-validation-summary="All" class="mb-0"></div>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <div class="form-floating mb-4">
                            <input asp-for="Name" class="form-control" placeholder="Group name" />
                            <label asp-for="Name">
                                <i class="bi bi-type me-2"></i>Group Name
                            </label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea asp-for="Description" class="form-control"
                                      style="height: 120px" placeholder="Description"></textarea>
                            <label asp-for="Description">
                                <i class="bi bi-text-paragraph me-2"></i>Description
                            </label>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-image me-2"></i>Group Image
                            </label>
                            <input asp-for="Image" class="form-control" type="file"
                                   accept="image/*" />
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Choose a square image for best results
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-plus-circle me-2"></i>Create Group
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Groups
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
