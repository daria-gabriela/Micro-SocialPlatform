@model MicroSocialPlatform.Models.Group
@{
    ViewData["Title"] = "Edit Group";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h2 class="h4 mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Edit Group
                    </h2>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">
                                <i class="bi bi-type me-2"></i>Group Name
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter group name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label">
                                <i class="bi bi-text-paragraph me-2"></i>Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Describe your group"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Image" class="form-label">
                                <i class="bi bi-image me-2"></i>Group Image
                            </label>
                            <input type="file" asp-for="Image" class="form-control"
                                   accept="image/*" />
                            <span asp-validation-for="Image" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Show" asp-route-id="@Model.Id"
                               class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-check2-all me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}