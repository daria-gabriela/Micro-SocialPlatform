@model IEnumerable<MicroSocialPlatform.Models.Group>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container py-4">
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h2 class="mb-0">
                <i class="bi bi-people-fill me-2"></i>Groups
            </h2>
        </div>
        <div class="col-md-6 text-md-end">
            <a asp-action="New" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>New Group
            </a>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Search" method="get">
                <div class="input-group">
                    <span class="input-group-text bg-transparent">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" name="query" class="form-control form-control-lg border-start-0"
                           placeholder="Search groups..." />
                    <button type="submit" class="btn btn-primary px-4">Search</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 120px">Image</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Moderator</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var group in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(group.Image))
                                {
                                    <img src="@group.Image" alt="@group.Name"
                                         class="rounded shadow-sm"
                                         style="width: 100px; height: 100px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                         style="width: 100px; height: 100px;">
                                        <i class="bi bi-people display-6 text-secondary"></i>
                                    </div>
                                }
                            </td>
                            <td>
                                <h6 class="mb-1">@group.Name</h6>
                            </td>
                            <td>
                                <p class="text-muted mb-0 text-truncate" style="max-width: 300px;">
                                    @group.Description
                                </p>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-circle me-2 text-secondary"></i>
                                    @group.Moderator?.UserName
                                </div>
                            </td>
                            <td class="text-end">
                                <a asp-action="Show" asp-route-id="@group.Id"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-arrow-right me-1"></i>
                                    View Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>








