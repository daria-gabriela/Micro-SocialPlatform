@model MicroSocialPlatform.Models.Post
<div class="container py-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-transparent border-0 pt-4 px-4">
            <h2 class="d-flex align-items-center gap-2 m-0">
                <i class="bi bi-plus-circle"></i>
                New Post
            </h2>
        </div>

        <div class="card-body p-4">
            <form asp-controller="Posts" asp-action="New" method="post" enctype="multipart/form-data">
                <div class="mb-4">
                    <label asp-for="Image" class="form-label d-flex align-items-center gap-2">
                        <i class="bi bi-image"></i>
                        Upload Image
                    </label>
                    <div class="input-group">
                        <span class="input-group-text bg-light">
                            <i class="bi bi-upload"></i>
                        </span>
                        <input asp-for="Image"
                               type="file"
                               class="form-control form-control-lg"
                               accept="image/*" />
                    </div>
                    <span asp-validation-for="Image" class="text-danger small mt-2"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Content" class="form-label d-flex align-items-center gap-2">
                        <i class="bi bi-pencil-square"></i>
                        Content
                    </label>
                    <textarea asp-for="Content"
                              class="form-control form-control-lg"
                              rows="6"
                              style="resize: none;"></textarea>
                    <span asp-validation-for="Content" class="text-danger small mt-2"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-check-circle me-2"></i>
                        Create Post
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    .btn-primary {
        background: linear-gradient(to right, #0d6efd, #0b5ed7);
        border: none;
        transition: all 0.2s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(13,110,253,0.2);
        }

    .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(13,110,253,.15);
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}